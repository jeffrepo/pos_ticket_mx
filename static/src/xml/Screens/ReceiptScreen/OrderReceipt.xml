<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="pos_ticket_mx.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
  <!-- <t t-extend="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1"> -->
    <!-- <xpath expr="//div[hasclass('before-footer')]" position="inside"> -->
    <xpath expr="//div[hasclass('pos-receipt')]" position="replace">

      <br/>

      <div class="pos-receipt">
        <t t-if="receipt.company.logo">
          <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
        </t>

        <table style="width:100%;">
          <tr>
            <th style="color:black;">Factura</th>
            <td></td>
            <div class="pos-receipt-order-data">
              <th style="font-size: 11px;" t-esc="receipt.name"></th>
            </div>
          </tr>

          <tr style="height:10px;">
            <div class="pos-receipt-order-data">
              <td style="font-size: 11px;" t-esc="receipt.date.localestring"></td>
            </div>
            <td></td>
            <th style="color:black; font-size: 13px;">USO CFDI:</th>
          </tr>

          <tr>
            <th style="color:black; height:50" colspan="3" align="center"></th>
          </tr>

          <div class="pos-receipt-amount">

            <tr style="height:50">
              <td style="color:black; height:0.20cms; font-size: 13px;"><span t-esc="env.pos.format_currency(receipt.total_with_tax)" class="pos-receipt-right-align"/></td>
              <td></td>
              <td></td>
            </tr>

          </div>

          <tr>
            <th style="color:black; height:50" colspan="3" align="center"></th>
          </tr>

          <tr style="height:35px;">
            <th colspan="2" style="color:black; font-size: 13px;">CERTIFICADO CFDI:</th>
          </tr>

          <tr style="height:35px;">
            <th style="color:black; font-size: 13px;">Receptor:</th>
          </tr>
          <br></br>
          <tr style="height:15px;">
            <td style="color:black; font-size: 11px;"><span t-esc="receipt.client.name"/></td>
          </tr>

          <tr style="height:20px;">
            <t t-if="receipt.client.vat">
              <td style="font-size: 11px;"><span t-esc="receipt.client.vat"/></td>
            </t>
          </tr>

          <tr style="height:35px;">
            <th style="color:black; font-size: 13px;">EMISOR:</th>
          </tr>
          <div class="pos-receipt-contact">
            <tr style="height:15px;">
              <t t-if="receipt.company.vat">
                <td style="font-size: 11px;" colspan="2" t-esc="receipt.company.name"></td>
              </t>
            </tr>
            <tr style="height:20px;">
              <t t-if="receipt.company.vat">
                <td style="font-size: 11px;" colspan="2" t-esc="receipt.company.vat"></td>
              </t>
            </tr>
          </div>

          <tr style="height:35px;">
            <th style="color:black; font-size: 13px;" colspan="2">Expedido en:</th>
          </tr>
          <br></br>
          <tr>
            <th style="color:black; height:0.30cms" colspan="4" align="center"></th>
          </tr>

        </table>


        <table style="width:100%;">

          <tr>
            <th style="color:black; font-size: 12px;">Cantidad</th>
            <th style="color:black; font-size: 12px;" align="center">Descripción</th>
            <th style="color:black; font-size: 12px;" align="center">Precio</th>
            <th style="color:black; font-size: 12px;">Importe</th>
          </tr>

          <tr>
            <th style="color:black; height:0.30cms" colspan="4" align="center"><hr size="4px" color="black"></hr></th>
          </tr>

          <tr t-foreach="receipt.orderlines" t-as="l">
            <t t-if="l.price > 0">
              <td style="font-size: 10px;" align="center"><span t-esc="l.quantity"/></td>
              <td style="font-size: 10px;"><span t-esc="l.product_name_wrapped[0]"/></td>
              <td style="font-size: 10px;" align="right"><span t-esc="env.pos.format_currency_no_symbol(l.price)" /></td>
              <td style="font-size: 10px;" align="right"><span t-esc="(l.quantity*l.price).toFixed(2)"/></td>
            </t>



          </tr>

          <tr>
            <th style="color:black; height:0.20cms" colspan="4" align="center"><hr></hr></th>
          </tr>

        </table>

        <table style="width:100%;" >

          <t t-if="'datos_certificacion' in state">
            <t t-if="state.vat || state.folio_fiscal || state.certificado_sat || state.datos_certificacion.sello_sat">
              <tr>
                <td style="width:100px; padding:10px" rowspan="10" colspan="2" class="barcode col-3">
                  <div id="qrcode">
                  <script type="text/javascript">
                    var qr_string = "<t t-esc="state.qr_string"/>";
                    new QRCode(document.getElementById("qrcode"), qr_string);
                  </script>
                  </div>
                </td>
              </tr>
            </t>
          </t>

          <tr>
            <td></td>
            <td style="color:black; font-size:10px;" >  DESCUENTO:</td>
            <!-- <t style="font-size: 10px;" t-foreach="receipt.orderlines" t-as="l">
              <t t-if="l.price &lt; 0">
                <td style="font-size:10px;" align="right"><span t-esc="descuento+=l.price"/></td>
              </t>
            </t> -->
            <t style="font-size: 10px;" t-if="state.descuento">
              <td style="font-size:10px;" align="right"><span t-esc="env.pos.format_currency(state.descuento)"/></td>
            </t>
          </tr>

          <tr>
            <td></td>
            <td style="color:black; font-size: 10px;">  SUBTOTAL: </td>
            <td style="font-size: 10px;" align="right"><span t-esc="env.pos.format_currency(receipt.subtotal)"/></td>
          </tr>

          <tr>
            <td></td>
            <td style="color:black; font-size: 10px;">  I.V.A. 16%: </td>
            <td style="font-size: 10px;" align="right"><span t-esc="env.pos.format_currency(receipt.total_tax)"/></td>
          </tr>

          <tr>
            <td></td>
            <td colspan="2"><hr></hr></td>
          </tr>

          <tr>
            <td></td>
            <td style="color:black; font-size: 10px;">  TOTAL: </td>
            <td style="color:black; font-size: 10px;" align="right"><span t-esc="env.pos.format_currency(receipt.total_rounded)"/></td>
          </tr>

          <tr>
            <td style="font-color:white; font-size: 10px; color:#FDFEFE; font:white;"> </td>
            <!-- <font COLOR="white"><![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;]]></font> -->
            <td style="font-size: 10px;">Tipo de pago: </td>
          </tr>

          <tr t-foreach="receipt.paymentlines" t-as="line">
            <td></td>
            <td style="font-size: 10px;" t-esc="line.name">  </td>
          </tr>

        </table>

        <table style="width:100%;">

          <tr style="height:35px;">
            <t t-if="total_letras">
              <td ></td>
            </t>
          </tr>

          <tr style="height:35px;">
            <t t-if="state.total_letras">
              <td style="color:black; font-size: 13px;" colspan="2" align="center"><span t-esc="state.total_letras"/></td>
            </t>
          </tr>

          <t t-if="'datos_certificacion' in state">
            <t t-if="state.regimen_fiscal">
              <tr style="height:35px;">
                <th style="font-size: 12px; color:black;">Régimen fiscal: </th>
              </tr>

              <tr>
                <td style="font-size: 12px;" colspan="2"><span t-esc="state.regimen_fiscal"/> Régimen general de ley personas morales</td>

              </tr>
            </t>
          </t>

          <t t-if="state.certificado_sat">
            <tr style="height:35px;">
              <th style="font-size: 12px; color:black;">CERTIFICADO SAT: </th>
              <td style="font-size: 12px;" align="left"><span t-esc="state.certificado_sat"/></td>
            </tr>
          </t>

          <t t-if="state.fecha_certificacion">
            <tr style="height:35px;">
              <th style="font-size: 11px; color:black;">FECHA CERTIFICACIÓN: </th>
              <td style="font-size: 11px;" align="left"><span t-esc="state.fecha_certificacion"/></td>
            </tr>
          </t>

          <tr>
            <td style="font-size: 10px;"></td>
          </tr>

          <t t-if="state.folio_fiscal">
            <tr style="height:35px;">
              <th style="font-size: 12px; color:black;">FOLIO FISCAL: </th>
            </tr>

            <tr>
              <td style="font-size: 11px;" colspan="2"><span t-esc="state.folio_fiscal"/></td>
            </tr>
          </t>

          <t t-if="'datos_certificacion' in state">
            <t t-if="state.cadena_original">
              <tr style="height:35px;">
                <th style="color:black; font-size: 12px;">CADENA ORIGINAL: </th>
              </tr>

              <tr style="height:80px; Word-break:break-all;">
                <td style="font-size: 10px; Word-break:break-all;" colspan="2">
                  <div class="digital-stamp-content">
                    <span t-esc="state.cadena_original"/>
                  </div>
                </td>
              </tr>
            </t>
          </t>

          <t t-if="'datos_certificacion' in state">

            <t t-if="state.sello_sat">
              <tr style="height:35px;">
                <th style="color:black; font-size: 12px;">SELLO SAT: </th>
              </tr>

              <tr style="height:80px; Word-break:break-all;">
                <td style="font-size: 10px; Word-break:break-all;" colspan="2">
                  <div class="digital-stamp-content">
                    <span t-esc="state.sello_sat"/>
                  </div>
                </td>
              </tr>
            </t>
          </t>

          <t t-if="'datos_certificacion' in state">
            <t t-if="state.sello_digital_cfdi">
              <tr style="height:35px;">
                <th style="color:black; font-size: 12px;" colspan="2">SELLO DIGITAL DEL CFDI: </th>
              </tr>

              <tr style="height:80px; Word-break:break-all;">
                <td style="font-size: 10px; Word-break:break-all;" colspan="2">
                  <span t-esc="state.sello_digital_cfdi"/>
                </td>
              </tr>
            </t>
          </t>

          <tr style="height:70px;">
            <th style="font-size: 10px;" align="center" colspan="2"></th>
          </tr>

          <tr style="height:35px;">
            <th style="font-size: 10px;" align="center" colspan="2">Este documento es una representacion impresa de un CFDI, los datos que no se muestran, estan contenidos en el XML </th>
          </tr>


        </table>

      </div>

    </xpath>


  </t>

</templates>
